<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos en Tiempo Real</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1>Lista de Productos en Tiempo Real</h1>

      <ul id="products-list" class="list-group">
        {{#each productos}}
          <li class="list-group-item">
            {{this.title}}
            - Precio: ${{this.price}}
            <form
              action="/carts/{{cartId}}/product/{{this._id}}"
              method="POST"
              class="d-inline"
            >
              <button type="submit" class="btn btn-success btn-sm">Agregar al
                carrito</button>
            </form>
          </li>
        {{/each}}
      </ul>

      <!-- Formulario para agregar un nuevo producto -->
      <form id="productForm" action="/api/products" method="POST" class="mt-3">
        <div class="form-group">
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="TÃ­tulo del producto"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            id="price"
            name="price"
            class="form-control"
            placeholder="Precio"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Agregar Producto</button>
      </form>

      <script src="/socket.io/socket.io.js"></script>
      <script src="/js/realtime.products.js"></script>
    </div>
  </body>
</html>